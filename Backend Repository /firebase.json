{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "Y",
    "rewrites": [
      {
        "source" : "/",
        "function" : "app"
      },{
        "source" : "/connect/oauth",
        "function" : "app"
        }
    ],
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
